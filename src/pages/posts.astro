---
import { log } from "astro/dist/core/logger/core";

const response = await fetch("https://jsonplaceholder.typicode.com/posts");

const posts = await response.json();

console.log(posts);
---

<h1 class="text-center font-bold text-4xl underline mb-5">My posts</h1>

<div class="grid grid-cols-5 gap-3 w-11/12 m-auto">
  {
    posts.map((post: any) => (
      <div class="border rounded-md p-3 text-center flex flex-col gap-2">
        <h5 class="font-black">{post.id}</h5>
        <h3 class="font-semibold">{post.title}</h3>
        <p class="text-sm">{post.body}</p>
      </div>
    ))
  }
</div>
